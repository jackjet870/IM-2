                                <Label Grid.Column="0" Grid.Row="4" FontSize="10" HorizontalAlignment="Right">Payment Type</Label>
                                <ComboBox Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Name="cmbPaymentType" FontSize="10" SelectionChanged="cmbPaymentType_SelectionChanged"/>
                                <!--#endregion-->

