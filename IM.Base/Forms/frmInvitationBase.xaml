<Window x:Class="IM.Base.Forms.frmInvitationBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IM.Base.Forms"
        mc:Ignorable="d"
        Title="Invitation Base" Height="700" Width="700" Loaded="frmInvitationBase_Loaded">
    <Grid Background="SkyBlue" Name="grdGeneral"
          ScrollViewer.CanContentScroll="True"
          ScrollViewer.VerticalScrollBarVisibility="Visible">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="230"></RowDefinition>
            <RowDefinition Height="270"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
        </Grid.RowDefinitions>

        <!--#region ROW 1:  INFO USER/ TIPO DE INVITACIONES Y LENGUAJE-->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid Name="Row1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="200"></ColumnDefinition>
                    <ColumnDefinition Width="200"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--#region INFORMACION USER-->
                <GroupBox Grid.Column="0" Name="grbUser" Height="45" VerticalAlignment="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="../Images/User.png"/>
                        <Label Grid.Column="1" Name="lblUser" VerticalAlignment="Center" FontSize="11" Foreground="Black" FontWeight="Bold"/>
                    </Grid>
                </GroupBox>
                <!--#endregion-->

                <!--#region TIPOS DE INVITACIONES (QUINIELLA, SHOW, INTERVAL)-->
                <GroupBox Grid.Column="1" Name="grbTypeInvitations" Height="45" VerticalAlignment="Top">
                    <Grid Name="grdTypeInvitations">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <!--#region QUINIELLA-->
                        <Label Grid.Column="0" Grid.Row="0" Name="lbQuiniella" FontSize="10" HorizontalAlignment="Center">Quiniella</Label>
                        <CheckBox Grid.Column="0" Grid.Row="1" Name="chkQuiniella" Width="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <!--#endregion-->

                        <!--#region SHOW-->
                        <Label Grid.Column="1" Grid.Row="0" Name="lblShow" HorizontalAlignment="Center" FontSize="10">Show</Label>
                        <CheckBox Grid.Column="1" Grid.Row="1" Name="chkShow" Width="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <!--#endregion-->

                        <!--#region INTERVAL-->
                        <Label Grid.Column="2" Grid.Row="0" Name="lblInterval" FontSize="10" HorizontalAlignment="Center">Interval</Label>
                        <CheckBox Grid.Column="2" Grid.Row="1" Name="chkInterval" Width="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <!--#endregion-->
                    </Grid>
                </GroupBox>
                <!--#endregion-->

                <!--#region LENGUAJE-->
                <GroupBox Grid.Column="2" Name="grbLanguage" Height="45" VerticalAlignment="Top">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Name="lblLanguage" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Top">Language</Label>
                        <ComboBox Grid.Row="1" Name="cmbLanguage" FontSize="10" SelectionChanged="cmbLanguage_SelectionChanged"/>
                    </Grid>

                </GroupBox>
                <!--#endregion-->
            </Grid>
        </Grid>
        <!--#endregion-->

        <!--#region ROW 2: INFO INVITADO-->
        <Grid Grid.Row="2" Grid.Column="1" Height="45" VerticalAlignment="Top">
            <GroupBox>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Name="colGuid"></ColumnDefinition>
                        <ColumnDefinition Name="colReservNum"></ColumnDefinition>
                        <ColumnDefinition Name="colBtnSearch"></ColumnDefinition>
                        <ColumnDefinition Name="colOutInvitation"></ColumnDefinition>
                        <ColumnDefinition Name="colRebookRef"></ColumnDefinition>
                        <ColumnDefinition Name="colDate"></ColumnDefinition>
                        <ColumnDefinition Name="colTime"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!--#region GUID-->
                    <Label Grid.Column="0" Grid.Row="0" Name="lblGuid" HorizontalAlignment="Center" FontSize="10">GUID</Label>
                    <TextBox Grid.Column="0" Grid.Row="1" Name="txtGuid" FontSize="10"/>
                    <!--#endregion-->

                    <!--#region NÚMERO DE RESERVACIÓN-->
                    <Label Grid.Column="1" Grid.Row="0" Name="lblReservationNumber" HorizontalAlignment="Center" FontSize="10">Rsrv Num.</Label>
                    <TextBox Grid.Column="1" Grid.Row="1" Name="txtReservationNumber" FontSize="10"/>
                    <!--#endregion-->

                    <!--#region BOTÓN BUSCAR-->
                    <Button Grid.Column="2" Grid.Row="1" Width="80" Name="btnSearch" Click="btnSearch_Click" FontSize="10">Search</Button>
                    <!--#endregion-->

