                                <ComboBox Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="5" Name="cmbResort" FontSize="10" SelectionChanged="cmbResort_SelectionChanged"/>
                                <!--#endregion-->

                            </Grid>
                        </GroupBox>
                        <!--#endregion-->

