<Window x:Class="IM.Base.Forms.ErrorMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                Title="Error" Height="358" Width="453" ResizeMode="NoResize" Background="SkyBlue" WindowStyle="ToolWindow"
                Loaded="Window_Loaded" ShowInTaskbar="False">
    <Grid>
        <Image Source="../Images/Error.png" Margin="10,10,369,223"/>
        <Label Content="Has happened an error in the application." FontSize="16" FontWeight="Bold" Margin="100,21,10,216"/>
        <Label Content="Would you like to continue?" FontSize="16" FontWeight="Bold" Margin="100,59,10,223"/>
        <Label Content="Description:" Margin="10,105,330,180"/>
        <TextBox Name="txtDescription" Margin="10,146,10,81" IsReadOnly="True" TextWrapping="Wrap"/>
        <Button Name="btnYes" Content="YES" Width="80" Height="40" Margin="230,263,117,16" Background="White" FontWeight="Bold" Click="btnYes_Click"/>
        <Button Name="btnNo" Content="NO" Width="80" Height="40" Margin="332,258,12,13" Background="White" FontWeight="Bold" Click="btnNo_Click"/>
    </Grid>
</Window>