      <ProgressBar.Foreground>
        <SolidColorBrush Color="#E58B51E0"/>
      </ProgressBar.Foreground>
    </ProgressBar>
    <Label x:Name="lblPorcentProgresBarReservations" Content="Label" HorizontalAlignment="Right" Margin="0,78,5,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="10.667" Height="19"/>
