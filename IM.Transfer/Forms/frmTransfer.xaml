        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IM.Transfer.Forms"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        
        Title="Intelligence Marketing Trasnfers" Height="614.5" Width="863.682" Loaded="Window_Loaded" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="/IM.Transfer;component/Images/IM.ico">
