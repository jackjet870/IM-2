    <Label x:Name="lblStatusReservations" Content="Status" HorizontalAlignment="Left" Margin="77,62,0,0" VerticalAlignment="Top" Width="150" Grid.Column="3" FontSize="9.333" FontWeight="Bold" FontFamily="Engravers MT" Height="36" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.ColumnSpan="2"/>
