    <Label x:Name="lblTransferReservations" Content="lblTransferReservations" HorizontalAlignment="Left" Margin="22,240,0,0" VerticalAlignment="Top" Width="266" VerticalContentAlignment="Center" Grid.ColumnSpan="3"/>

