    <Label x:Name="lblLastTransferReservations" Content="lblLastTransferReservations" Grid.Column="2" HorizontalAlignment="Left" Margin="316,242,0,0" VerticalAlignment="Top" Width="327" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.ColumnSpan="3"/>


    <DataGrid HeadersVisibility="Column" x:Name="grdLogExchangeRate" ColumnWidth="*" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="16,353,0,0" VerticalAlignment="Top" Height="142" Width="831" Grid.ColumnSpan="5" AlternatingRowBackground="#FFE8BBBB" AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserResizeColumns="True" 
