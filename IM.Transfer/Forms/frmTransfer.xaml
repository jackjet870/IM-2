<Window x:Class="IM.Transfer.Forms.frmTransferLauncher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IM.Transfer.Forms"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        
        Title="Intelligence Marketing Trasnfers" Height="604.5" Width="863.682" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">

    <Window.Resources>
        <CollectionViewSource x:Key="reservationsCollectionViewSource" CollectionViewType="ListCollectionView"/>
        <CollectionViewSource x:Key="exchangeRateCollectionViewSource" CollectionViewType="ListCollectionView"/>

        <Style x:Key="TextBoxWheelStyle" TargetType="Label">
            <Setter Property="Background" Value="Navy" />
            <Setter Property="Foreground" Value="White" />
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseWheel">
                    <BeginStoryboard>
                        <Storyboard >
                            <ColorAnimation Storyboard.TargetProperty="(TextBox.Background).(SolidColorBrush.Color)"
                                  From="Navy" To="White"
                                  Duration="0:0:0.4"
                                  AutoReverse="True"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="blinkAnimation" TargetType="{x:Type Label}">
            <Style.Resources>
                <Storyboard x:Key="flashAnimation" >
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" AutoReverse="True" Duration="0:0:0.5" RepeatBehavior="Forever" />
                </Storyboard>               
            </Style.Resources>

            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                    <Trigger.EnterActions>
                        <BeginStoryboard Name="flash" Storyboard="{StaticResource flashAnimation}" />
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <StopStoryboard BeginStoryboardName="flash"/>
                    </Trigger.ExitActions>
                </Trigger>
      
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <!--StateChanged="Window_StateChanged"-->
    <Grid x:Name="layout" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="453*"/>
            <RowDefinition Height="66*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblTitle" Content="Intelligence Marketing Transfer" HorizontalAlignment="Left"  Margin="248,2,0,0" VerticalAlignment="Top" Width="388" FontSize="21.333" FontWeight="Bold" FontFamily="Arial Black" Height="39" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>


        <Label x:Name="lblStatusExchangeRate" Style="{StaticResource ResourceKey=blinkAnimation}" IsEnabled="False" Content="Status" HorizontalAlignment="Left" Margin="692,243,0,0" VerticalAlignment="Top" Width="150" FontSize="9.333" FontWeight="Bold" FontFamily="Engravers MT" Height="36" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="21" Margin="13,14,0,0" VerticalAlignment="Top" Width="92" CornerRadius="10">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="-1,0" Width="92" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Label x:Name="lblDate" Content="Date" HorizontalAlignment="Right" Margin="-3,-4,754,0" VerticalAlignment="Top" Width="96" FontSize="13.333" FontStyle="Italic" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
        </Border>
        <Label x:Name="lblLastTransferReservations"  Content="lblLastTransferReservations" HorizontalAlignment="Left" Margin="520,180,0,0" VerticalAlignment="Top" Width="327" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="1" Height="23"/>

        
       
        <DataGrid
            x:Name="grdLogReservations"
            DataContext="{StaticResource reservationsCollectionViewSource}"
            ItemsSource="{Binding}" HeadersVisibility="Column"
            HorizontalAlignment="Left" Margin="16,41.329,0,0" VerticalAlignment="Top" ColumnWidth="*" MaxHeight="142" Height="142" AlternatingRowBackground="#FFE8BBBB" AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserResizeColumns="False" 
              CanUserResizeRows="True" CanUserSortColumns="True" Grid.Row="1" BorderBrush="Aquamarine" IsReadOnly="True" UseLayoutRounding="False" FontWeight="ExtraLight" BorderThickness="3,3,3,3" Width="832">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Date, Mode=OneWay, IsAsync=True}" Width="150" IsReadOnly="True"  Header="Date" SortMemberPath="Date"/>
                <DataGridTextColumn Binding="{Binding LogLevel, Mode=OneWay, IsAsync=True}" Width="55" IsReadOnly="True" Header="Log" SortMemberPath="LogLevel"/>
                <DataGridTextColumn Binding="{Binding Message, Mode=OneWay, NotifyOnTargetUpdated=True, IsAsync=True}" Width="*"  IsReadOnly="True" Header="Message" SortMemberPath="Message"/>
            </DataGrid.Columns>
        </DataGrid>

        <ProgressBar x:Name="progresBarReservations" HorizontalAlignment="Left" Height="15" Margin="22,10,0,0" VerticalAlignment="Top" Width="119" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#E59472CF" Grid.Row="1"/>
        <Label x:Name="lblPorcentProgresBarReservations" Content="Label" HorizontalAlignment="Right" Margin="0,7,767,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="10.667" Height="19" Grid.Row="1" Width="31"/>
        <Label x:Name="lblStatusReservations" Style="{StaticResource ResourceKey=blinkAnimation}" IsEnabled="False" Content="Status" HorizontalAlignment="Left" Margin="693,8,0,0" VerticalAlignment="Top" Width="150" FontSize="9.333" FontWeight="Bold" FontFamily="Engravers MT" Height="36" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1"/>
        
        <Label x:Name="lblNextTransferReservations" Content="lblNextTransferReservations" HorizontalAlignment="Left" Margin="521,197,0,0" VerticalAlignment="Top" Width="326" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="1" Height="23"/>
        <Label x:Name="lblTitleReservations" Content="Reservations" HorizontalAlignment="Left" Margin="347,4,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Arial Black" Width="133" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" Height="28"/>
        <Label x:Name="lblTransferReservations" Content="lblTransferReservations" HorizontalAlignment="Left" Margin="22,182,0,0" VerticalAlignment="Top" Width="287" VerticalContentAlignment="Center" Grid.Row="1" Height="38"/>

        

        <Label x:Name="lblTitleExchangeRate" Content="Exchange Rate" HorizontalAlignment="Left" Margin="328,247,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Arial Black" Width="166" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" Height="28"/>
        <Border x:Name="brdStatusReservations" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="20" Margin="708,15,0,0" VerticalAlignment="Top" Width="129" CornerRadius="10" Grid.Row="1"/>
        
        <ProgressBar x:Name="progresBarExchangeRate" HorizontalAlignment="Left" Height="16" Margin="22,255,0,0" VerticalAlignment="Top" Width="121" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#E59472CF" Grid.Row="1"/>
        <Label x:Name="lblPorcentProgressExchangeRate" Content="0 %" HorizontalAlignment="Left" Margin="59,252,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="10.667" Height="19" Grid.Row="1" Width="27"/>
        <DataGrid DataContext="{StaticResource exchangeRateCollectionViewSource}" ItemsSource="{Binding}" HeadersVisibility="Column" x:Name="grdLogExchangeRate" HorizontalAlignment="Left" Margin="10,278,0,0" VerticalAlignment="Top" ColumnWidth="*" MaxHeight="145" Height="142" AlternatingRowBackground="#FFE8BBBB" AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserResizeColumns="True" 
          CanUserResizeRows="False" Grid.Row="1" CanUserSortColumns="True" BorderBrush="Aquamarine" IsReadOnly="True" BorderThickness="3,3,3,3" Width="832">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Date, Mode=OneWay, IsAsync=True}" Width="150" IsReadOnly="True"  Header="Date" SortMemberPath="Date"/>
                <DataGridTextColumn Binding="{Binding LogLevel, Mode=OneWay, IsAsync=True}" Width="55" IsReadOnly="True" Header="Log" SortMemberPath="LogLevel"/>
                <DataGridTextColumn Binding="{Binding Message, Mode=OneWay, NotifyOnTargetUpdated=True, IsAsync=True}" Width="*" IsReadOnly="True" Header="Message" SortMemberPath="Message"/>
            </DataGrid.Columns>
        </DataGrid>
        <Border x:Name="brdStatusExchangeRate" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="18" Margin="702,251,0,0" VerticalAlignment="Top" Width="129" CornerRadius="10" Grid.Row="1"/>
        <Label x:Name="lblLastTransferExchangeRate" Content="lblLastTransferReservations" HorizontalAlignment="Left" Margin="534,419,0,0" VerticalAlignment="Top" Width="303" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="1" Height="23"/>
        <Label x:Name="lblNextTransferExchangeRate" Content="lblNextTransferExchangeRate" HorizontalAlignment="Left" Margin="538,435,0,0" VerticalAlignment="Top" Width="303" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Grid.Row="1" Grid.RowSpan="2" Height="23"/>
        
        <Button x:Name="btnReservations" Content="Update Reservations" HorizontalAlignment="Left" Margin="462,14,0,0" VerticalAlignment="Top" Width="174" Height="25" Click="btnReservations_Click" Grid.Row="2"/>
        <Button x:Name="btnExchangeRate" Content="Update Exchange Rate" HorizontalAlignment="Left" Margin="672,14,0,0" VerticalAlignment="Top" Width="174" Height="25" Click="btnExchangeRate_Click" Grid.Row="2"/>

        

        <!--#region  Estatus Bar-->
        <StatusBar x:Name="stbStatusBar" Background="#147F79" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="13,0,7,10" Height="8" />
        
        <!--#endregion-->
    </Grid>





</Window>
