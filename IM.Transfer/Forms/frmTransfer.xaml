      <DataGrid.Columns>
        <DataGridTextColumn Binding="{Binding Date, Mode=OneWay}" Width="150" IsReadOnly="True"  Header="Date" SortMemberPath="Date"/>
        <DataGridTextColumn Binding="{Binding LogLevel, Mode=OneWay}" Width="55" IsReadOnly="True" Header="Log" SortMemberPath="LogLevel"/>
        <DataGridTextColumn Binding="{Binding Message, Mode=OneWay, NotifyOnTargetUpdated=True}" Width="*" IsReadOnly="True" Header="Message" SortMemberPath="Message"/>
      </DataGrid.Columns>
    </DataGrid>
    <DataGrid HeadersVisibility="Column" x:Name="grdLogReservations" ColumnWidth="*" DataContext="{Binding}" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="16,98,0,0" VerticalAlignment="Top" Height="142" Width="831" AlternatingRowBackground="#FFE8BBBB" AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserResizeColumns="True" 
          CanUserResizeRows="True" CanUserSortColumns="True" BorderBrush="Aquamarine" IsReadOnly="True" Grid.ColumnSpan="5" UseLayoutRounding="False" FontWeight="ExtraLight" BorderThickness="3,3,3,3">
      <DataGrid.Columns>
        <DataGridTextColumn Binding="{Binding Date, Mode=OneWay}" Width="150" IsReadOnly="True"  Header="Date" SortMemberPath="Date"/>
        <DataGridTextColumn Binding="{Binding LogLevel, Mode=OneWay}" Width="55" IsReadOnly="True" Header="Log" SortMemberPath="LogLevel"/>
        <DataGridTextColumn Binding="{Binding Message, Mode=OneWay, NotifyOnTargetUpdated=True}" Width="*"  IsReadOnly="True" Header="Message" SortMemberPath="Message"/>
      </DataGrid.Columns>
    </DataGrid>
    <Label x:Name="lblTitleExchangeRate" Content="Exchange Rate" HorizontalAlignment="Left" Margin="134,324,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Arial Black" Width="166" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
