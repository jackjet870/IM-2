<UserControl x:Class="IM.Styles.UserControls.RichTextBoxToolBar2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IM.Styles.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="310">
    <Grid>
        <Border x:Name="brdFontsStyle" CornerRadius="5" BorderThickness="1" BorderBrush="Black">
            <StackPanel Orientation="Horizontal" Margin="1" >
                <TextBlock Text="Font Size" VerticalAlignment="Center"/>
                <ComboBox x:FieldModifier="public" x:Name="cbxfontSize" Width="40" Height="24" Margin="5" ToolTip="Font Size" 
                          SelectionChanged="cbxfontSize_SelectionChanged"/>
                <TextBlock Text="Font Family" VerticalAlignment="Center"/>
                <ComboBox x:FieldModifier="public" x:Name="cbxfontFamilies" Width="150" Height="24"  Margin="5" ToolTip="Font Family" 
                          SelectionChanged="cbxfontFamilies_SelectionChanged"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
