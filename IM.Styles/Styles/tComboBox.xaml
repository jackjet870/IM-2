                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>
                <TextBlock FontWeight="Bold" TextAlignment="Justify" FontSize="10">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} - {1}">
                            <Binding Path="msID"/>
                            <Binding Path="msN"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </Grid>
        </Border>
    </DataTemplate>

    <!--#endregion-->
    
    <!--#region SalesRooms-->
    <DataTemplate x:Key="tSalesRoomsComboBox">
        <Border Height="Auto" Margin="0,2,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>
                <TextBlock FontWeight="Bold" TextAlignment="Justify" FontSize="10">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} - {1}">
                            <Binding Path="srID"/>
                            <Binding Path="srN"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </Grid>
        </Border>
    </DataTemplate>
    <!--#endregion-->

    <!--#region Location-->
    <DataTemplate x:Key="tLocationComboBox">
        <Border Height="Auto" Margin="0,2,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>
                <TextBlock FontWeight="Bold" TextAlignment="Justify" FontSize="10">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} - {1}">
                            <Binding Path="srID"/>
                            <Binding Path="srN"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </Grid>
        </Border>
    </DataTemplate>
    <!--#endregion-->
</ResourceDictionary>