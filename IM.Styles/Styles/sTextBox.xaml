<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:IM.Styles.Styles">

    <Style TargetType="TextBox" x:Key="txtPax-ValidationInfo">
        <Style.Triggers>
            <DataTrigger Binding="{Binding guDepositTwisted}" Value="{x:Null}">
                <Setter Property="Text" Value="0"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding guDepositTwisted}" Value="">
                <Setter Property="Text" Value="0"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>