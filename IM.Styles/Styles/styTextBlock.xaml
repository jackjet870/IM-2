<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:IM.Styles">

    <!--#region Texto que acompañan los datepicker-->
    <Style TargetType="{x:Type TextBlock}" x:Key="txtb-DateRange">
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="5,0,0,0"/>
    </Style>
    <!--#endregion-->

    <!--#region cabeceras de los catalogos-->
    <Style TargetType="{x:Type TextBlock}" x:Key="txtb-HeaderCatalogs" >
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <!--#endregion-->

    <!--#region cabecera combobox MailOutsConfig -->
    <Style TargetType="{x:Type TextBlock}" x:Key="txtb-HeaderCombo">
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="10,0,0,5"/>
    </Style>
    <!--#endregion-->


</ResourceDictionary>