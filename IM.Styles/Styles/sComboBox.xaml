<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:IM.Styles.Styles">
    <!--#region cbxGeneral-->
    <Style TargetType="ComboBox" x:Key="cbxGeneral">
        <Style.Triggers>
            <Trigger Property="ComboBox.IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <!--#endregion-->
    
    <!--#region cbxPersonnel-->
    
    <!--#region cbxPersonnel-ValidatePermission-->
    <Style TargetType="ComboBox" x:Key="cbxPersonnel-ValidatePermission" BasedOn="{StaticResource cbxGeneral}">
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="IsEditable" Value="True"/>
        <Setter Property="IsEnabled" Value="False"/>
    </Style>
    <!--#endregion-->
        
    <!--#endregion-->
</ResourceDictionary>